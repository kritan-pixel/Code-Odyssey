    <div class="scroll-indicator">Scroll Speed: Normal</div>
  </div>

  <script>
    let scrollDuration = 0; // Time spent scrolling in seconds
    let scrollSpeed = 1; // Initial scroll speed

    // Track scroll time and slow down the speed every 2 minutes (120 seconds)
    setInterval(function() {
      scrollDuration += 1;

      if (scrollDuration % 120 === 0) { // Every 2 minutes
        scrollSpeed -= 0.1; // Slow down by 0.1x
        document.querySelector('.scroll-indicator').innerText = `Scroll Speed: Slow (${scrollSpeed.toFixed(1)}x)`;
      }
    }, 1000); // Check every second

    // Override default scroll behavior to apply the speed reduction
    let lastScrollTime = Date.now();
    window.addEventListener('wheel', function(e) {
      let currentTime = Date.now();
      let timeDiff = (currentTime - lastScrollTime) / 1000; // in seconds

      if (timeDiff < 1) return; // ignore rapid scrolling events

      // Adjust scroll speed based on elapsed time
      if (scrollSpeed < 1) {
        let slowFactor = Math.max(scrollSpeed, 0.3); // Prevent from slowing too much
        window.scrollBy(0, e.deltaY * slowFactor);
      } else {
        window.scrollBy(0, e.deltaY);
      }

      lastScrollTime = currentTime;
    });
  </script>
